<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="BaseToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
    </style>

    <style name="BaseToolbarTheme">
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="MoviePoster">
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:transitionName">@string/movie_transition_poster</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="MovieDetailsTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/movie_details_title</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="MovieDetailsText" parent="MovieDetailsTitle">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/movie_details_text</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="Heading5">
        <item name="android:textColor">@color/info_darker</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="Heading6">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="Heading7">
        <item name="android:textColor">@color/info_darker</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="NormalLabel">
        <item name="android:textColor">@color/dark1</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="ExtraSmallLabel">
        <item name="android:textColor">@color/dark1</item>
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="SmallLabel">
        <item name="android:textColor">@color/dark3</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="BodySmall">
        <item name="android:textColor">@color/dark2</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="BodyNormal">
        <item name="android:textColor">@color/dark1</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="Caption">
        <item name="android:textColor">@color/dark3</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="Mullish">
        <item name="android:textColor">@color/info_lighter</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">@color/dark3</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="NormalText.Size10">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="NormalText.Black12">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="NormalText.Black14">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="NormalText.Bold" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="NormalText.WhiteBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="NormalText.Error" parent="NormalText">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="NormalButton">
        <item name="android:background">@drawable/solid_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/space_8dp</item>
        <item name="android:paddingEnd">@dimen/space_8dp</item>
        <item name="android:paddingTop">@dimen/space_12dp</item>
        <item name="android:paddingBottom">@dimen/space_12dp</item>
    </style>

    <style name="NormalGhostButton">
        <item name="android:background">@drawable/ghost_button_background</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/opaque</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/space_16dp</item>
        <item name="android:paddingEnd">@dimen/space_16dp</item>

    </style>

    <style name="PrefixEditText" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">@style/NormalText</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/gray_3</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:paddingTop">@dimen/space_16dp</item>
        <item name="android:paddingBottom">@dimen/space_16dp</item>
        <item name="android:paddingStart">@dimen/space_12dp</item>
        <item name="android:paddingEnd">@dimen/space_12dp</item>
        <item name="android:drawablePadding">@dimen/space_12dp</item>
        <item name="android:minWidth">156dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/dividerColor</item>
        <item name="android:alpha">0.08</item>
    </style>

    <style name="BottomNavigationText">
        <item name="android:textColor">@color/black_lighter</item>
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="BottomNavigationText.Bold" parent="BottomNavigationText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>
