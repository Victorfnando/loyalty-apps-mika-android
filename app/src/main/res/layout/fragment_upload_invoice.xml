<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/card_footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_invoice_title"
                style="@style/Heading5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_20dp"
                android:text="@string/upload_invoice_screen_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/container_iv_invoice"
                android:layout_width="@dimen/invoice_image_size"
                android:layout_height="@dimen/invoice_image_size"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_24dp"
                android:background="@drawable/border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_invoice_title">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_invoice"
                    android:layout_width="@dimen/invoice_image_size"
                    android:layout_height="@dimen/invoice_image_size"
                    android:scaleType="centerCrop" />
            </FrameLayout>

            <com.dre.loyalty.core.view.PrefixEditTextWithLabel
                android:id="@+id/et_form_branch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_24dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:drawableEnd="@drawable/ic_expand"
                android:hint="@string/upload_invoice_screen_hint_branch"
                android:inputType="none"
                app:fieldLabel="@string/upload_invoice_screen_label_branch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container_iv_invoice" />

            <com.dre.loyalty.core.view.PrefixEditTextWithLabel
                android:id="@+id/et_transaction_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_20dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:drawableEnd="@drawable/ic_calendar"
                android:hint="@string/upload_invoice_screen_hint_transaction_date"
                android:inputType="none"
                app:fieldLabel="@string/upload_invoice_screen_label_transaction_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_form_branch" />

            <com.dre.loyalty.core.view.PrefixEditTextWithLabel
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:layout_marginTop="@dimen/space_20dp"
                android:layout_marginEnd="@dimen/space_16dp"
                android:hint="@string/upload_invoice_screen_hint_total_amount"
                android:inputType="number"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:fieldLabel="@string/upload_invoice_screen_label_total_amount"
                app:layout_constraintTop_toBottomOf="@id/et_transaction_date" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:behavior_peekHeight="0dp"
        app:behavior_hideable="false"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tnc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_upload"
                style="@style/NormalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16dp"
                android:text="@string/upload_invoice_screen_btn_upload"
                android:enabled="false"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
